- const { darkmode } = theme
nav#nav
  #toggle-menu
      a.site-page
        i.fas.fa-grip-vertical

  span#blog_name
    .back-home-button(tabindex='-1')
      a(onclick="btf.scrollToDest(0,500)")
        img.navavatar(src="/img/avatar.png" width="50" height="50")
    a#site-name(href=url_for('/'))
      .title #[=config.title]
      i.fa-solid.fa-house

  div.mask-name-container
    center(id="name-container")
      a(id="page-name" onclick="btf.scrollToDest(0,500)")

    div.nav-button#nav-totop
      a.totopbtn
        i.fas.fa-arrow-up
        span#percent(onclick="btf.scrollToDest(0,500)") 0

  #menus
    if (theme.algolia_search.enable || theme.local_search.enable)
      div.nav-button#search-button
        a.site-page.social-icon.search
          i.fas.fa-search.fa-fw
          span=' '+_p('search.title')

    div.nav-button.console-button
      a.link(onclick="btf.scrollToDest(0,500)")
        i.fas.fa-angles-up

    div.nav-button.console-button
      a.link(onclick="heo.showConsole()")
        i.fas.fa-gear

    !=partial('includes/header/menu_item', {}, {cache: true})
