.search-dialog
  position: fixed
  top: 0
  z-index: 1001
  display: none
  padding: 20px
  width: 100%
  border-radius: 0px
  background: #00000000
  padding-bottom: 0 !important

#local-search .search-dialog .local-search__hit-item:before
  display: none

#local-search .search-dialog .local-search__hit-item
    text-align: center
    padding: 20px
    height 100px
    overflow hidden
    padding-bottom: 0 !important
    box-shadow: 0 1px 0 0 #aaa

  +maxWidth768()
    top: 0
    left: 0
    margin: 0
    width: 100%
    height: 100%
    border-radius: 0

  hr
    margin: 20px auto

  .search-nav
    margin: 0 0 14px
    color: $search-color
    font-size: 1.4em
    line-height: 1

    .search-dialog-title
      margin-right: 10px

    .search-close-button
      float: right
      color: $grey
      transition: color .2s ease-in-out

      &:hover
        color: $search-color

#search-mask
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 1000
  display: none
  background: rgba($dark-black, .6)